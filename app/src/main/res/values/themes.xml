<resources xmlns:tools="http://schemas.android.com/tools">


  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorAccent">@color/color1</item>
    <item name="colorButtonNormal">@color/color0</item>
    <item name="colorPrimary">@color/color1</item>
    <item name="colorPrimaryVariant">@color/color0</item>
    <item name="colorOnPrimary">@color/color00</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/color2</item>
    <item name="colorSecondaryVariant">@color/color0</item>
    <item name="colorOnSecondary">@color/color00</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/color1</item>
    <item name="android:windowLightStatusBar">false</item>
    <!-- Customize your theme here. -->
    <item name="colorControlHighlight">@color/color1</item>
    <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
  </style>

  <style name="AppTheme.FullScreenActivity" parent="AppTheme">
    <item name="android:windowBackground">@color/color0</item>
    <item name="android:windowFullscreen">true</item>
  </style>


</resources>